{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "bannerTitle": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "serviceTitle": {
      "type": "string",
      "required": false
    },
    "featureImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "handle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "primaryButtonName": {
      "type": "string",
      "required": false
    },
    "primaryButtonHref": {
      "type": "string",
      "required": false
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "metadata.metadata"
    }
  }
}
