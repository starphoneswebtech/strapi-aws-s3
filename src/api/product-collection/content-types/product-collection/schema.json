{
  "kind": "collectionType",
  "collectionName": "product_collections",
  "info": {
    "singularName": "product-collection",
    "pluralName": "product-collections",
    "displayName": "Product Collection",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "default": "Star Collections"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "collectionBanner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "featureImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "medusaIdentifier": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "collectionLink": {
      "type": "string"
    },
    "rank": {
      "type": "integer"
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "metadata.metadata"
    },
    "product_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product-category.product-category"
    },
    "featured_devices": {
      "displayName": "device_collection",
      "type": "component",
      "repeatable": false,
      "component": "device-collection.device-collection"
    }
  }
}
