{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "bannerTitle": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "serviceTitle": {
      "type": "string",
      "required": false
    },
    "featureImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "handle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "primaryButtonName": {
      "type": "string",
      "required": false
    },
    "primaryButtonHref": {
      "type": "string",
      "required": false
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "metadata.metadata"
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "default": "With more than 45 stores Australia wide, Star Phones offer various mobile repairs"
    },
    "inNavigation": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
